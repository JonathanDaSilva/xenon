    "files": [
        "./src/components/Component.ts",
        "./src/components/ComponentAnnotations.ts",
        "./src/components/index.ts",
        "./src/components/List.ts",
        "./src/index.ts",
        "./src/selectors/CSSIndexSelector.ts",
        "./src/selectors/CSSSelector.ts",
        "./src/selectors/CSSTextSelector.ts",
        "./src/selectors/Index.ts",
        "./src/selectors/QASelector.ts",
        "./src/selectors/Selector.ts",
        "./test/e2e/specs/TestSpec.ts",
        "./test/unit/specs/TestSpec.ts",
        "./typings/main.d.ts"
    ],
    "atom": {
        "rewriteTsconfig": true
    }
}
